                    "PotPlayerMini64.exe",
                    "PotPlayer Mini"
                ]
            ],
            "post_install": [
                "Remove-Item \"$dir/`$*\" -Recurse",
                "",
                "$DelFiles = @(",
                "    'PotPlayerMiniXP64.exe',",
                "    'PotPlayerXP64.exe',",
                "    'PotPlayer64.exe',",
                "    'Html',",
                "    'uninstall.exe.nsis'",
                ")",
                "foreach ($d in $DelFiles) {",
                "    if (Test-Path \"$dir/$d\") {",
                "        Remove-Item \"$dir/$d\" -Recurse",
                "    }",
                "}",
                "",
                "if (Test-Path \"$persist_dir/DLLs/64bit/version.dll\") {",
                "    Copy-Item \"$persist_dir/DLLs/64bit/version.dll\" \"$dir\"",
                "}"
            ]
